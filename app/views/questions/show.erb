<h2><%= @question.title %></h2>
<p><%= @question.body %></p>

<ul>
  <% @question.tags.each do |tag| %>
      <li class="question-tag"><%= tag.name%></li>
  <% end %>
</ul>

<div>
  <span><%= @question.created_at %>
      <a href="/users/<%= @question.user.id %>"><%= @question.user.username %></a>
  </span>
</div>

<ul class="question-comments">
  <% @question.comments.each do |comment| %>
    <li>
      <p><%= comment.body%></p>
      <p>
        <a href="/users/<%= comment.user.id%>"><%= comment.user.username %>
        </a>
      <%= comment.created_at %>
      </p>
    </li>
  <% end %>
</ul>

<a href="/questions/<%= @question.id %>/comments/new">add a comment</a>

<div id="new-question-comment-container">

</div>


<ul class="answers-list">
  <% @question.answers.each do |answer| %>
    <%= erb :'/answers/_new_answer_partial', locals: {answer: answer} %>
  <%end%>
</ul>

<div id="new-answer-container">
  <a class="new-answer-link" href="/questions/<%= @question.id %>/answers/new">Add An Answer </a>
</div>



